#ifndef NETMAP
#define NETMAP

// Debug C macro - can be compiled out for speed reasons
#if 1
#include <stdio.h>
#define DEBUG(fmt...) printf(">>> "fmt##)
#else
#define DEBUG(fmt...)
#endif

/** Datatype - represents one tile on the map. This is usually a char, but may even be a class (although this would currently not work) */
typedef char Ntile;

/** Datatype - represents the width and height coordinates on the map. Usually long long to allow ultra large maps. */
typedef long long Ncoord;

/** The tile value which counts as error. This should be user configurable soon ;) */
const Ntile Nerror = -1;

// Datatype - represents an array[][] of tiles. This goes into an extra class.
#include <Nvtile>

#endif
