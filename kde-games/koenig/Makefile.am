SUBDIRS = libcgc pics .

bindir = $(ggzexecmoddir)

bin_PROGRAMS = koenig

koenig_SOURCES = \
	main.cc \
	game.cc \
	board.cc \
	boardcontainer.cc \
	ggz.cc \
	toplevel.cc \
	options.cc \
	kexttabctl.cc

noinst_HEADERS = \
	game.h \
	board.h \
	boardcontainer.h \
	ggz.h \
	toplevel.h \
	options.h \
	kexttabctl.h

INCLUDES = -I$(top_srcdir)/koenig/libcgc $(LIBGGZ_INCLUDES) $(GGZMOD_INCLUDES) $(all_includes)

koenig_LDFLAGS = $(LIBGGZ_LDFLAGS) $(LIBGGZMOD_LDFLAGS) $(all_libraries)
koenig_LDADD = $(top_builddir)/koenig/libcgc/libcgc.a $(LIB_GGZ) $(LIB_GGZMOD) $(LIB_QT) $(LIB_KDECORE) $(LIB_KDEUI)

METASOURCES = AUTO

EXTRA_DIST = module.dsc.in koenigui.rc

rcdir = $(kde_datadir)/koenig
rc_DATA = koenigui.rc


install-data-local:
	$(GGZ_CONFIG) -D --install --modfile=module.dsc --force
 
uninstall-local:
	-$(GGZ_CONFIG) -D --remove --modfile=module.dsc

