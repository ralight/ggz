#!/bin/sh

set -e

case "$1" in
	configure*)
	# Install modules
	for i in /usr/share/ggz/ggz-config/kde-*; do \
		echo register $i; \
		ggz-config --install --fromfile=$i --force; \
	done
	;;
	*)
	;;
esac

# Automatically added by dh_installdocs
if [ "$1" = "configure" ]; then
	if [ -d /usr/doc -a ! -e /usr/doc/libggz-client-libs -a -d /usr/share/doc/libggz-client-libs ]; then
		ln -sf ../share/doc/libggz-client-libs /usr/doc/libggz-client-libs
	fi
fi
# End automatically added section

#DEBHELPER#

exit 0
