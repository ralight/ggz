#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

build: build-stamp
build-stamp:
	dh_testdir

	./configure --prefix=/usr --mandir=\$${prefix}/share/man
	# Add here commands to compile the package.
	#$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/tmp.
	#$(MAKE) install prefix=`pwd`/debian/tmp/usr
	install -d `pwd`/debian/ggz-kde-games/etc
	touch `pwd`/debian/ggz-kde-games/etc/ggz.modules
	$(MAKE) install DESTDIR=`pwd`/debian/ggz-kde-games
	rm -rf `pwd`/debian/ggz-kde-games/etc

	# No development library, only runtime
	rm -f `pwd`/debian/ggz-kde-games/usr/lib/libzoneclient.so

	# Shlibdeps
	install -m 755 -d `pwd`/debian/ggz-kde-games/DEBIAN
	install -m 644 debian/shlibs debian/ggz-kde-games/DEBIAN

	# Save .dsc files
	rm -rf `pwd`/debian/ggz-kde-games/usr/share/ggz/ggz-config
	install -d `pwd`/debian/ggz-kde-games/usr/share/ggz/ggz-config
	for i in `find . -name *.dsc`; do \
		name=`echo $$i | cut -d "/" -f 2`; \
		cp $$i `pwd`/debian/ggz-kde-games/usr/share/ggz/ggz-config/kde-$$name.dsc; \
	done

	# Relative symlink
	rm -f `pwd`/debian/ggz-kde-games/usr/share/doc/HTML/en/muehle/common
	ln -s ../../../kde/HTML/en/common `pwd`/debian/ggz-kde-games/usr/share/doc/HTML/en/muehle/common


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
#	dh_testversion
	dh_testdir
	dh_testroot

#	dh_installdebconf	
	dh_installdocs
#	dh_installexamples
	dh_installmenu
#	dh_installemacsen
#	dh_installpam
#	dh_installinit
#	dh_installcron
	dh_installmanpages
#	dh_installinfo
#	dh_undocumented
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_suidregister
	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
