$arts = array();
$f = fopen("artstats.txt", "r");
while($a = fgets($f, 1024))
{
	rtrim($a);
	$ar = split(" ", $a);
	$xpm = split("=", $ar[1]);
	$png = split("=", $ar[2]);
	$svg = split("=", $ar[3]);
	$arts[] = array($ar[0], $xpm[1], $png[1], $svg[1]);
}
fclose($f);

foreach($arts as $art)
{
	$modulename = $art[0];
	$xpm = $art[1];
	$png = $art[2];
	$svg = $art[3];

	echo "<tr><td>$modulename</td>";

	if ($xpm > 0) :
		echo "<td>XPM: $xpm</td>";
	else :
		echo "<td></td>";
	endif;
	if ($png > 0) :
		echo "<td>PNG: $png</td>";
	else :
		echo "<td></td>";
	endif;
	if ($svg > 0) :
		echo "<td>SVG: $svg</td>";
	else :
		echo "<td></td>";
	endif;

	echo "</tr>";
}

