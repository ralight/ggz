[GameInfo]
Author = Jason Short
Description = GGZ Cards game module for Forty-Two
Homepage = http://www.ggzgamingzone.org/games/ggzcards/
Name = GGZCards-FortyTwo
Version = @GGZCARDS_VERSION@

[LaunchInfo]
ExecutablePath = ggzd.ggzcards --game=fortytwo
# Set ExecutableArgs in the room file

[Protocol]
Engine = @GGZCARDS_PROTOCOL_ENGINE@
Version = @GGZCARDS_PROTOCOL_VERSION@

[TableOptions]
AllowLeave = 1
BotsAllowed = 1..3
PlayersAllowed = 4
KillWhenEmpty = 0
AllowSpectators = 1

[Statistics]
Records = 1
Ratings = 1
