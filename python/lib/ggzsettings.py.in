import sys

def unquote(s):
	x = s.replace("${prefix}", "@prefix@")
	return x

DATAPATH = None
MODULEPATH = None
I18NPATH = None

path = sys.argv[0]
if len(path) > 0:
	if path[0] == ".":
		DATAPATH = "./"
		MODULEPATH = "./"
		I18NPATH = "./"
		BREAK_HERE
	else:
		DATAPATH = unquote("@datadir@/ggz")
		MODULEPATH = unquote("@prefix@/lib/site-python")
		I18NPATH = unquote("@datadir@/locale")

del unquote
del path
del sys

