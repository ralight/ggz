#!/usr/bin/env ruby

require "RGGZMod"

class TestClient < RGGZMod
	def event(id, data)
		puts "TestClient: event!"

		if id == GGZMod::EVENTSTATE
			state = @server.get_state
			puts "State is now " + state.to_s
		end
	end
end

puts "## RGGZMod Test Client ##"

client = TestClient.new
client.loop

puts "## Bye ##"

